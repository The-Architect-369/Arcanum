{
  "name": "arcanum",
  "private": true,
  "version": "1.0.0",
  "description": "The Arcanum â€” monorepo (apps: site, web; pkg: ui; contracts: foundry).",
  "packageManager": "pnpm@9.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/site dev",
    "dev:web": "pnpm -C apps/web dev",
    "dev:site": "pnpm -C apps/site dev",
    "build": "pnpm -C apps/site build && pnpm -C apps/web build",
    "build:web": "pnpm -C apps/web build",
    "build:site": "pnpm -C apps/site build",
    "lint": "pnpm -C apps/site lint && pnpm -C apps/web lint",
    "fmt": "prettier -w .",
    "reorg": "DRY_RUN=1 bash scripts/reorg_core.sh"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "packageExtensions": {
      "styled-jsx@*": {
        "dependencies": {
          "client-only": "^0.0.1"
        }
      }
    },
    "patchedDependencies": {}
  },
  "engines": {
    "node": "22.x"
  }
}