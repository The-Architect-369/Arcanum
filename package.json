{
  "name": "arcanum",
  "private": true,
  "version": "1.0.0",
  "description": "Arcanum monorepo (apps: web; contracts: foundry/hardhat).",
  "packageManager": "pnpm@9.10.0",
  "engines": { "node": "20.x" },
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "lint": "pnpm -C apps/web lint",
    "typecheck": "pnpm -C apps/web typecheck",
    "contracts:compile": "pnpm -C contracts compile",
    "contracts:clean": "pnpm -C contracts clean",
    "deploy:web": "bash scripts/vercel-setup-web.sh",
    "fmt": "prettier -w .",
    "chain:build": "make -C chains/arcanum build",
    "chain:start-local": "make -C chains/arcanum localnet",
    "chain:stop-local": "make -C chains/arcanum down",
    "proto:gen": "bash chains/arcanum/tools/gen-proto.sh",
    "proto:clean": "rimraf apps/web/src/lib/arcanum-types"
  },
  "pnpm": {
    "packageExtensions": {
      "styled-jsx@*": {
        "dependencies": {
          "client-only": "^0.0.1"
        }
      }
    }
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
